<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearlayout0104"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
	        android:id="@+id/serverTxtNm01"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="설치장소"
	        style="@style/textTitle20dp_3" />
		<EditText
	        android:id="@+id/ntpbm_0104_edit01"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="20dp"
	        android:text=""
	        android:ems="12"
	        android:inputType="text"
	        style="@style/text15dp" >
	    </EditText>
	    <TextView
	        android:id="@+id/serverTxtNm03"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="설치주소"
	        style="@style/textTitle20dp_3" />
	    
	    <EditText
	        android:id="@+id/ntpbm_0104_edit02"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="20dp"
	        android:text=""
	        android:ems="12"
	        android:inputType="text"
	        style="@style/text15dp" >
	    </EditText>
	    <EditText
	        android:id="@+id/ntpbm_0104_edit03"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="20dp"
	        android:text=""
	        android:ems="12"
	        android:inputType="text"
	        style="@style/text15dp" >
	    </EditText>
	    
	    <TextView
	        android:id="@+id/serverTxtNm05"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="담당자성명"
	        style="@style/textTitle20dp_3" />
	
	    <EditText
	        android:id="@+id/ntpbm_0104_edit04"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="20dp"
	        android:text=""
	        android:ems="12"
	        android:inputType="text"
	        style="@style/text15dp" >
	    </EditText>
	    
	    <TextView
	        android:id="@+id/serverTxtNm07"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="연락처 전화"
	        style="@style/textTitle20dp_3" />
	
	    <EditText
	        android:id="@+id/ntpbm_0104_edit05"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="20dp"
	        android:text=""
	        android:ems="12"
	        android:inputType="text"
	        style="@style/text15dp" >
	    </EditText>
	    
	    <TextView
	        android:id="@+id/serverTxtNm09"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="연락처 휴대폰"
	        style="@style/textTitle20dp_3" />
	
	    <EditText
	        android:id="@+id/ntpbm_0104_edit06"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="20dp"
	        android:text=""
	        android:ems="12"
	        android:inputType="text"
	        style="@style/text15dp" >
	    </EditText>
	    
	    <TextView
	        android:id="@+id/serverTxtNm11"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="담당자 이메일"
	        style="@style/textTitle20dp_3" />
	
	    <EditText
	        android:id="@+id/ntpbm_0104_edit07"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="20dp"
	        android:text=""
	        android:ems="12"
	        android:inputType="text"
	        style="@style/text15dp" >
	    </EditText>
	    
	    <TextView
	        android:id="@+id/serverTxtNm13"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="납품일자"
	        style="@style/textTitle20dp_3" />
	
	    <EditText
	        android:id="@+id/ntpbm_0104_edit08"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="20dp"
	        android:text=""
	        android:ems="12"
	        android:inputType="text"
	        android:enabled="true"
	        style="@style/text15dp" >
	    </EditText>
	    
	</LinearLayout>    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@id/linearlayout0104"
        android:layout_alignParentBottom="true" >
        <Button
	        android:id="@+id/ntpbm_0104_btn01"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.5"
	        android:layout_marginRight="3dp"
	        android:text="@string/ntpbm_0104_btn01"
	        android:onClick="saveInstall"
	        style="@style/btnStyleBeige" />
	
	    <Button
	        android:id="@+id/ntpbm_0103_btn02"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.5"
	        android:layout_marginLeft="3dp"
	        android:text="@string/ntpbm_0104_btn02"
	        android:onClick="cancelInstall"
	        style="@style/btnStyleBeige" />
	    
	</LinearLayout>
</RelativeLayout>
