        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >
		    <TextView
		        android:id="@+id/idTxtNm"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/id_txt_nm"
		        style="@style/textTitle20dp" />
		    <EditText
		        android:id="@+id/idVal"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:layout_marginLeft="20dp"
		        android:ems="10"
		        android:maxLength="20"
		        android:inputType="text"
		        style="@style/text15dp" >
		    </EditText>
		</LinearLayout>
		
    	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >
            
		    <TextView
		        android:id="@+id/pwdTxtNm"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/pwd_txt_nm"
		        style="@style/textTitle20dp" />
		    <EditText
		        android:id="@+id/pwdVal"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:layout_marginLeft="20dp"
		        android:ems="10"
		        android:maxLength="10"
		        android:inputType="textPassword"
		        style="@style/text15dp" >
				
		    </EditText>
		</LinearLayout>
		
    	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >
            
		    <Button
		        android:id="@+id/loginBtn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.5"
		        android:layout_marginRight="3dp"
		        android:text="@string/login_btn_nm"
		        style="@style/btnStyleBeige" />
		    <Button
		        android:id="@+id/cancelBtn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="0.5"
		        android:layout_marginLeft="3dp"
		        android:text="@string/cancel_btn_nm"
		        style="@style/btnStyleBeige" />
		</LinearLayout>
    </LinearLayout>
