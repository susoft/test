<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
	
    <LinearLayout
        android:id="@+id/ntpbm_0109_linearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >
        
        <TextView
	        android:id="@+id/ntpbm_0109_txtNm_0100"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="납품자명"
	        style="@style/textTitle20dp_2" />
        <EditText
	        android:id="@+id/ntpbm_0109_edit01"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="20dp"
	        android:text=""
	        android:ems="12"
	        android:inputType="text"
	        style="@style/text15dp" >
	    </EditText>
        <LinearLayout
	        android:id="@+id/ntpbm_0109_linearLayout03"
	        android:layout_width="fill_parent"
	        android:layout_height="100dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:layout_centerHorizontal="true"
	        android:background="@android:color/white"
	        android:orientation="horizontal" >
	    </LinearLayout>
	    <Button
	        android:id="@+id/ntpbm_0109_btn04"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_weight="1"
	        android:text="@string/ntpbm_0109_btn03"
	        android:onClick="reset1"
	        style="@style/btnStyleBeige" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ntpbm_0109_linearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ntpbm_0109_linearLayout02"
        android:orientation="vertical" >
        
        <TextView
	        android:id="@+id/ntpbm_0109_txtNm_0200"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="담당자명"
	        style="@style/textTitle20dp_2" />
        <LinearLayout
	        android:id="@+id/ntpbm_0109_linearLayout00"
	        android:layout_width="fill_parent"
	        android:layout_height="100dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:layout_centerHorizontal="true"
	        android:background="@android:color/white"
	        android:orientation="horizontal" >
	    </LinearLayout>
    </LinearLayout>
    
    
    <LinearLayout
        android:id="@+id/ntpbm_0109_linearLayout02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
        
        <Button
	        android:id="@+id/ntpbm_0109_btn01"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="@string/ntpbm_0109_btn01"
	        android:onClick="regi"
	        style="@style/btnStyleBeige" />
        <Button
	        android:id="@+id/ntpbm_0109_btn03"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_weight="1"
	        android:text="@string/ntpbm_0109_btn03"
	        android:onClick="reset"
	        style="@style/btnStyleBeige" />
        <Button
	        android:id="@+id/ntpbm_0109_btn02"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_weight="1"
	        android:text="@string/ntpbm_0109_btn02"
	        android:onClick="cancel"
	        style="@style/btnStyleBeige" />
    </LinearLayout>
    
</RelativeLayout>
