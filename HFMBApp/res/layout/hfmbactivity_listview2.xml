<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:listSelector="@drawable/list_selector" >
	
    <ImageView 
        android:id="@+id/imgbtn_01"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerVertical="true"
		android:scaleType="centerCrop"
		android:background="#ffffff"
        android:src="@drawable/empty_photo"
        android:contentDescription="@string/app_name" />
   
    <LinearLayout
        android:id="@+id/list_linear_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/imgbtn_01"
        android:orientation="vertical" >
        <TextView        
	        android:id="@+id/ceo_nm"        
	        android:layout_width="wrap_content"        
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:text=""
	        style="@style/text17dp_bold" />
       
        <TextView        
	        android:id="@+id/company_nm"        
	        android:layout_width="wrap_content"        
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text=""
	        style="@style/text15dp" />
        
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:orientation="horizontal" >
	        <ImageView        
		        android:id="@+id/hfmb_006_photo_01"
		        android:layout_width="15dp"        
		        android:layout_height="15dp"
		        android:layout_gravity="center_vertical"
		        android:layout_marginLeft="2dp"
		        android:contentDescription="@string/app_name"
		        android:src="@drawable/home" />
		    <TextView        
		        android:id="@+id/phone1"        
		        android:layout_width="wrap_content"        
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:layout_marginLeft="2dp"
		        android:text=""
		        style="@style/text15dp" />
		</LinearLayout>
		
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:orientation="horizontal" >
		    <ImageView        
		        android:id="@+id/hfmb_006_photo_02"
		        android:layout_width="15dp"        
		        android:layout_height="15dp"
		        android:layout_gravity="center_vertical"
		        android:layout_marginLeft="2dp"
		        android:contentDescription="@string/app_name"
		        android:src="@drawable/mobile" />
		    <TextView        
		        android:id="@+id/phone2"        
		        android:layout_width="wrap_content"        
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:layout_marginLeft="2dp"
		        android:text=""
		        style="@style/text15dp" />
		</LinearLayout>
    </LinearLayout>
</RelativeLayout>